/* 模态框 */

.modal-shopingCar {
  width: 100%;
  position: fixed;
  bottom: 0;
  background: white;
  z-index: 100;
}
.img {
  width: 170rpx;
  height: 170rpx;
  background-color: silver;
  margin-left: 20rpx;
}

.img>image {
  width: 100%;
  height: 100%;
}
.first-row{
  display: flex;
  justify-content: space-between
}
.delete{
  margin-right:20rpx; 
  /* background: gold; */
  vertical-align: middle
}
.delete>image{
  width: 40rpx;
  height: 40rpx;
}
.modal-price{
  color: #ee0f1f;
}
.clearAll {
  height: 60rpx;
  line-height: 60rpx;
  text-align: right;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1px solid rgb(231, 231, 231);
  border-top: 1px solid rgb(231, 231, 231);
}

.buyingList {
  height: 200rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgb(231, 231, 231);
}

.contentBox {
  width: calc(100% - 210rpx);
  height: 200rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.contentBox>view {
  margin: 20rpx 0;
}

.buyingDetail {
  width: 100%;
  height: 60rpx;
  display: flex;
}

.modal-detail {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.modal-subtract {
  width: 60rpx !important;
  height: 60rpx;
  margin-left: 220rpx;
}

.modal-subtract>image {
  width: 60rpx;
  height: 60rpx;
}

.modal-add {
  width: 60rpx !important;
  height: 60rpx;
  margin-right: 20rpx;
}

.modal-add>image {
  width: 60rpx;
  height: 60rpx;
}
.modal-quantity{
  border-bottom: 1px solid #cacaca;
}
.modal-quantity>input{
  width: 60rpx;
  height: 60rpx;
  text-align: center;
}
