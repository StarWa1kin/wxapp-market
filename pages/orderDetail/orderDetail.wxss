page{
 background: #f1f1f1;
}
/* 支付方式 */
.payType{
  height: 60rpx;
  font-size: 32rpx;
  margin-left: 20rpx;
  line-height: 60rpx;
  color: #777;
}
.remainingSum{
  border-bottom:1px solid rgb(231, 231, 231)
}
.bg{
  background: white;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #343434;
}
.bg view{
  margin: 20rpx;
}
/* 支付栏 */
.payFixed{
  width: 100%;
  height: 100rpx;
  background: white;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.payMoney{
  margin: 20rpx;
  font-size: 42rpx;
  color: #EE0F1F;
  font-weight: bold;
}
.submit{
  width: 220rpx;
  background: #EE0F1F;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: white;
}