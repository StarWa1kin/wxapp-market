.header{
  width: 100%;
  height: 104rpx;
  background: #d3b65c;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header view{
  margin-left: 20rpx;
}
.header input{
  width: 570rpx;
  height: 70rpx;
  line-height:70rpx;
  background-color: rgba(255, 255, 255, 1);
  border-radius: 36rpx;
  font-size: 28rpx;
  color: rgba(153, 153, 153, 1);
  /* text-align: center; */
  padding-left: 30rpx;
}
.cancel{
  width: 80rpx;
  /* background: red; */
  font-size: 32rpx;
  color: white;
  margin-right:25rpx; 
}

/* 搜索结果区域 */
.serachContent{
  width: 100%;
}

/* 商品信息 */
.productInfo{
  width: 100%;
  height: 240rpx;
  display: flex;
  justify-content: start;
  align-items: center;
  border-bottom:1px solid rgb(231, 231, 231)
}
.img{
  width: 190rpx;
  height:190rpx;
  background-color: silver;
  margin-left:20rpx; 
}
.img>image{
  width: 100%;
  height: 100%;
}
.content{
  margin-left: 40rpx;
  width:480rpx;
  height:190rpx;
}
.content view{
  margin-bottom:12rpx; 
  height: 36rpx;
  
}
.name{
  font-size: 36rpx;
}
.star>image{
  width: 36rpx;
  height: 36rpx;
}
.description{
  font-size: 30rpx;
  color: #888888;
}
.detail{
  display: flex;
  font-size: 40rpx;
  justify-content: space-between;
  height: 60rpx !important;
}
.price{
  color: #EE0F1F;
}
.operate{
  width: 180rpx;
  height: 60rpx;
  display: flex;
  justify-content: space-around;

}
.add{
  width: 60rpx;
  height: 60rpx !important;
}
.add>image{
  width: 100%;
  height: 100%
}
.blankView{
   width: 60rpx;
  height: 60rpx 
}
.subtract{
  width: 60rpx;
  height: 60rpx !important;
}
.subtract>image{
  width: 100%;
  height: 100%
}