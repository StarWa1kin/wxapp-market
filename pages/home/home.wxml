        <image src='../../assets/page/star.png'></image>
        <image src='../../assets/page/star.png'></image> -->
      </view>
      <view class='description'>{{item.describe}}</view>
      <view class='detail'>
        <view class='price'>￥{{item.price}}</view>
        <view class='subtract' bindtap="subtract">
          <image src='../../assets/page/-.png'></image>
