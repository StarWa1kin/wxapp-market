page{
  background: #f1f1f1;
}
.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  background: white;
  position: fixed;
  z-index: 999;
}
.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 25%;
  color: #777;
}
/* 被选中的tab呈现的颜色 */
.on {
  color: #EE0F1F;
  border-bottom: 5rpx solid #EE0F1F;
}

.swiper-box {
  background: white;
  /* margin-top: 20rpx; */
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}


.orderGroup{
  /* margin-top: 20rpx; */
}
.timeStatus{
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid rgb(231, 231, 231);
}
.timeStatus>view{
  margin: 0 20rpx;
  font-size: 30rpx;

}
.time{
  color: #777;
}
.status{
  color: #EE0F1F;
}
.goodsList{
  width: 100%;
  height: 240rpx;
  background: white;
  display: flex;
  justify-content: start;
  align-items: center;
  border-bottom:1px solid rgb(231, 231, 231)
}
.img{
  width: 190rpx;
  height:190rpx;
  background-color: silver;
  margin-left:20rpx;
}
.img>image{
  width: 100%;
  height: 100%;
}
.content{
  margin-left: 20rpx;
  width:480rpx;
  height:190rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.content view{
  height: 36rpx;
  /* background: silver; */
}
.desc{
  font-size: 30rpx;
  color: #777
}
.money{
    display: flex;
  font-size: 34rpx;
}
.close-status{
    /*position: relative;*/
    /*left: 180px;*/
    /*top:-22px;*/
    display: flex;
    justify-content: flex-end;
    margin-top:2px;
  font-size: 30rpx;
  color: #777
}

/* 操作区域 */
.operation{
  height: 180rpx;
  /* background: pink; */
  text-align: right
}
.total{
  padding-top:20rpx;
  padding-right: 20rpx;
  font-size: 30rpx;
}
.big{
  font-size: 38rpx;
}
.button{
  display: flex;
  justify-content: flex-end;
}
.button view{
  background: white;
  margin: 20rpx;
  width: 180rpx;
  height: 60rpx;
  border-radius: 6rpx;
  text-align: center;
  font-size: 32rpx;
  line-height: 60rpx;

}
.buyAgain{
  border: 3rpx solid #777;
  color: #777;
}
.button2{
    display: flex;
    justify-content: flex-end;
}
.button2 view{
