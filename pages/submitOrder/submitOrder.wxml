<!-- 合计区域 -->
<view class='total'>
  <view class='totalMoney'>共5件商品 总计:
    <text class='big'>￥{{total}}</text>
  </view>
  <view class='acType'>账户类型:现款后货</view>
</view>

<!-- 支付方式 -->
<view class='payType'>支付方式</view>
<view class="remainingSum bg">
  <view>余额(剩余￥268.00)</view>
  <view>
    <radio-group class="radio-group" bindchange="radioChange">
      <label class="radio">
        <radio value="余额" checked="{{radioChoose1}}" color="#d3b65c" />
      </label>
    </radio-group>
  </view>
</view>
<view class='wechat bg'>
  <view>微信支付</view>
  <view>
    <radio-group class="radio-group" bindchange="radioChange">
      <label class="radio">
        <radio value="微信" checked="{{radioChoose2}}" color="#d3b65c" />
      </label>
    </radio-group>
  </view>
</view>

<!-- 固定支付栏 -->
<view class='payFixed'>
  <view class='payMoney'>￥{{total}}</view>
  <view class='submit'>提交订单</view>
</view>