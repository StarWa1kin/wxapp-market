<!-- 已加入购物车商品列表 -->
<view class='goodsList' wx:for="{{shoppingList}}" wx:key="{{index}}">
  <view class='goodsDetail'>
    <view class='img'>
      <image src=''></image>
    </view>
    <view class='content'>
      <view class='goodsName'>{{item.product.name}}{{item.product.weight}}g/{{item.product.unit}}</view>
      <view class='desc'>默认切块</view>
      <view class='money'>
        <view>￥{{item.product.price}}x{{item.quantity}}</view>
        <view class='littleSum'>￥{{item.littleSum}}</view>
      </view>
    </view>
  </view>

