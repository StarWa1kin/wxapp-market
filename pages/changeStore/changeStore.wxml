    <view class='storeList'>
      <!-- <view wx:if="{{item.describe=='余额支付'}}">{{item.describe}}(￥{{userInfo.balance}})</view>
      <view wx:else>{{item.describe}}</view> -->
      <view >{{item.name}} 地址:{{item.address}}</view>
      <view>
        <radio class="radio" value="{{item.id}}" checked="{{item.id==checked}}" color="#d3b65c"  />
      </view>
    </view>
  </block>
</radio-group>