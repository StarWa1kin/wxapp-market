<view class="header">
  <view class='avatarBox'>
    <view class='avatar'>
      <image src='{{userInfo.avatar}}'></image>
    </view>
    <view class='nickname'>
      <view class='name'>{{userInfo.name}}</view>
      <view class='moneyFirst'>{{userInfo.type==0?'先款后货':'先货后款'}}</view>
    </view>
  </view>
</view>

<view class='money'>
  <view class='left'>
    <view class="smaller">账户余额</view>
    <view class="bigger">￥{{userInfo.balance}}</view>
  </view>
  <view class='rigth'>
    <view class="smaller">积分</view>
    <view class="bigger">{{userInfo.integral}}</view>
  </view>
</view>

<view class='menu'>
  <!-- 菜单选项 -->
  <view class='row'>
    <view class='icon'>
      <image class="" src="../../assets/page/myOrder.png" mode="scaleToFill"></image>
    </view>
    <view class='text'>
      <view>我的订单</view>
      <view class='text-icon'><text class="littleSize">全部订单</text>></view>
    </view>
  </view>

  <!-- 菜单选项 -->
  <view class='row' bindtap='enterAddress'>
    <view class='icon'>
      <image class="" src="../../assets/page/myAddress.png" mode="scaleToFill"></image>
    </view>
    <view class='text'>
      <view>送货地址</view>
      <view class='text-icon'>
        <image class="" src="../../assets/page/Arrow.png" mode="scaleToFill"></image>
      </view>
    </view>
  </view>

  <!-- 菜单选项 -->
  <view class='row' bindtap='enterContact'>
    <view class='icon'>
      <image class="" src="../../assets/page/customerService.png" mode="scaleToFill"></image>
    </view>
    <view class='text'>
      <view>联系客服</view>
      <view class='text-icon'>></view>
    </view>
  </view>

  <!-- 菜单选项 -->
  <view class='row' bindtap='enterFeedback'>
    <view class='icon'>
      <image class="" src="../../assets/page/feedback.png" mode="scaleToFill"></image>
    </view>
    <view class='text'>
      <view>意见反馈</view>
      <view class='text-icon'>></view>
    </view>
  </view>

  <!-- 菜单选项 -->
  <view class='row' bindtap='exitLogin'>
    <view class='icon'>
      <image class="" src="../../assets/page/setting.png" mode="scaleToFill"></image>
    </view>
    <view class='text'>
      <view>退出登陆</view>
      <view class='text-icon'>></view>
    </view>
  </view>
</view>